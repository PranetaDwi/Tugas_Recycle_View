<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/card_hero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/txt_image_hero"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/soekarno"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/txt_name_hero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_image_hero"
                android:text="Nama Pahlawan"
                android:textColor="@color/black"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_black_italic"/>
            <TextView
                android:id="@+id/txt_content_hero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_image_hero"
                android:layout_below="@id/txt_name_hero"
                android:layout_marginLeft="25dp"
                android:text="Penjelasan Singkat"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:textAlignment="inherit"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>